@model MyApp.Models.Item
@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this item?</h3>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">Price: LKR @Model.Price.ToString("N2")</p>
        @if (Model.SerialNumber != null)
        {
            <p class="card-text">Serial Number: @Model.SerialNumber.Name</p>
        }
        @if (Model.Category != null)
        {
            <p class="card-text">Category: @Model.Category.Name</p>
        }
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>